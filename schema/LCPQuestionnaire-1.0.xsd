				<xs:annotation>
					<xs:documentation>Iron/steel</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="esi">
				<xs:annotation>
					<xs:documentation>ESI</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="district_heating">
				<xs:annotation>
					<xs:documentation>District heating</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="chp">
				<xs:annotation>
					<xs:documentation>CHP</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="other">
				<xs:annotation>
					<xs:documentation>Other (non refineries)</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="PollutantType">
		<xs:annotation>
			<xs:documentation>Pollutants, Form 5 "Pollutants not covered by TNP"</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:enumeration value=""/>
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="ElvSO2FuelTypeType">
		<xs:annotation>
			<xs:documentation>Form 7, column "E"</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:enumeration value=""/>
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="ELVSO2PeriodType">
		<xs:annotation>
			<xs:documentation>Form 7, column "F"</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:enumeration value=""/>
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="ELVNOxFuelTypeType">
		<xs:annotation>
			<xs:documentation>Form 7, column "H"</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:enumeration value=""/>
		</xs:restriction>
	</xs:simpleType>
